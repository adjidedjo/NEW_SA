<div class="panel panel-default">
  <div class="panel-heading">
    Search by Month Form
  </div>
  <div class="panel-body">
    <%= form_tag(request.fullpath, {method: :get, :class => "form-inline"}) do %>
    <div class="form-group">
      <%= select_month(params[:date].present? ? params[:date][:month].to_i : Date.today.month, {prompt: 'Choose month'}, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= select_year(Date.today, {start_year: 2017, end_year: Date.today.year, prompt: 'Choose year'}, {class: "form-control"}) %>
    </div>
    <%= submit_tag 'Search', name: nil, class: "btn btn-info" %>
    <% end %>
  </div>
</div>

<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading">
          Success Rate
        </div>
        <div class="panel-body">
          <table id="productivities" class="table table-striped table-hover">
            <thead>
              <tr>
                <th>NAME</th>
                <th style="width: auto;">BRANCH</th>
                <th style="width: auto;">BRAND</th>
                <th style="width: auto;">DATE</th>
                <th style="width: auto;">PLAN VISIT CUSTOMER</th>
                <th>VISIT CUSTOMER</th>
                <th>CLOSE DEAL VISIT</th>
                <th>CALL CUSTOMER</th>
                <th>CLOSE DEAL CALL</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tfoot></tfoot>
            <tbody>
              <% @sales_productivities.each do |sm| %>
              <tr>
                <td><%= find_sales(sm.salesmen_id).nama %></td>
                <td><%= find_branch(sm.branch_id) %></td>
                <td><%= sm.brand %></td>
                <td><%= sm.date.strftime("%d %B %Y") %></td>
                <td><%= sm.npvnc %></td>
                <td><%= sm.nvc %></td>
                <td><%= sm.ncdv %></td>
                <td><%= sm.ncc %></td>
                <td><%= sm.ncdc %></td>
                <td><%= link_to "EDIT", edit_sales_productivity_path(sm) %></td>
                <td><%= link_to "HAPUS", sales_productivity_path(sm), method: :delete, data: { confirm: "Yakin?"} %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="panel-footer">
          if you want to create a new one? click <%= link_to "here", new_sales_productivity_path, class: "mb-sm btn-xs btn btn-primary btn-outline" %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading">
            SUCCESS RATE
          </div>
          <div class="panel-body">
            <table id="datatable_customer" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>NAMA</th>
                  <th>BRANCH</th>
                  <th>BRAND</th>
                  <th>AVG VISIT PER DAY</th>
                  <th>SUCCESS RATE VISIT</th>
                  <th>AVG ORDER PER DEAL</th>
                  <th>AVG CALL PER DAY</th>
                </tr>
              </thead>
              <tbody>
                <% @sales.each do |cws| %>
                <tr class="gradeX">
                  <% aopd = ((cws.jumlah.nil? ? 0 : cws.jumlah).to_f/cws.ncdc.to_f) %>
                  <% acpd = ((cws.jumlah.nil? ? 0 : cws.jumlah).to_f/cws.ncc.to_f) %>
                  <td><%= cws.nama %></td>
                  <td><%= cws.Cabang.gsub(/Cabang/,'') %></td>
                  <td><%= cws.brand %></td>
                  <td><%= precision(cws.nvc/cws.count_sales) %></td>
                  <td><%= precision((cws.ncdv.to_f/cws.nvc.to_f)) %></td>
                  <td><%= precision((aopd.nan? ? 0 : aopd)) %></td>
                  <td><%= precision((acpd.nan? ? 0 : acpd)) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading">
            SALES PRODUCTIVITY
          </div>
          <div class="panel-body">
            <table id="held_orders" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Branch</th>
                  <th>Brand</th>
                  <th>QTY Mattras</th>
                  <th>Entry Salesman</th>
                  <th>Productivity</th>
                </tr>
              </thead>
              <tbody>
                <% @sales_prod.each do |cws| %>
                <tr class="gradeX">
                  <td><%= cws.tanggalsj.strftime('%d %B %Y') %></td>
                  <td><%= cws.Cabang.gsub(/Cabang/,'') %></td>
                  <td><%= cws.jenisbrgdisc %></td>
                  <td><%= cws.jumlah %></td>
                  <td><%= cws.salesmen %></td>
                  <td><%= cws.prod %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
