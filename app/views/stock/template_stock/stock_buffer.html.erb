<div class="content-heading">
  BUFFER STOCK
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            BUFFER Stock
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>KODE BARANG</th>
                  <th class="sort-numeric">DESCRIPTION</th>
                  <th class="sort-numeric">BUFFER</th>
                </tr>
              </thead>
              <tbody>
                <% @buf_stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.imlitm %></td>
                  <td><%= cs.imdsc1 + ' ' + cs.imdsc2 %></td>
                  <td><%= cs.safety/10000 %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>