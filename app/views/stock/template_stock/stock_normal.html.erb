<div class="content-heading">
  STOCK <%= @state %> <%= @brand %> <%= Date.today.strftime("%d %B %Y") %> REPORT for <%= @branch %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Stock  
            <b>LAST UPDATE: <%= (Time.now - 15.minutes).strftime('%H:%M') %></b> 
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Descriptions</th>
                  <th>Brand</th>
                  <th>Item</th>
                  <th class="sort-numeric">Available</th>
                  <th class="sort-numeric">OnHand</th>
                </tr>
              </thead>
              <tbody>
                <% @stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.item_number %></td>
                  <td><%= cs.description %></td>
                  <td><%= cs.brand %></td>
                  <td><%= cs.lipqoh.to_i - cs.lihcom.to_i %></td>
                  <td><%= cs.lipqoh.to_i %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>