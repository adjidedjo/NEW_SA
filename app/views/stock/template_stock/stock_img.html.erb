<div class="content-heading">
  STOCK ALL BRAND REPORT for IMG
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Stock  
            <b>REAL TIME</b> 
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>IMG</th>
                  <th>KODE</th>
                  <th>NAMA</th>
                  <th>JUMLAH</th>
                </tr>
              </thead>
              <tbody>
                <% @stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.nama %></td>
                  <td><%= cs.kode_barang %></td>
                  <td><%= cs.nama_barang %></td>
                  <td><%= cs.jumlah %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>
