<div class="content-heading">
  BEDDING ACCESSORIES
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            BEDDING ACCESSORIES
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th class="sort-numeric">DESCRIPTION</th>
                  <th class="sort-numeric">P</th>
                  <th class="sort-numeric">L</th>
                  <th class="sort-numeric">Available</th>
                </tr>
              </thead>
              <tbody>
                <% @stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.dsc1 + ' ' + cs.dsc2 %></td>
                  <td><%= cs.panjang %></td>
                  <td><%= cs.lebar %></td>
                  <td><%= cs.total %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>