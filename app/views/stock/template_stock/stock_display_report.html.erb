<div class="content-heading">
  STOCK <%= @state %> <%= @brand %> <%= Date.today.strftime("%d %B %Y") %> REPORT for <%= @branch %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Stock Display
            <b>LAST UPDATE: <%= Time.now.strftime("%d %B %Y") %> <%= (DateTime.now - 30.minutes).beginning_of_hour.strftime('%H:%M') %></b> 
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Descriptions</th>
                  <th class="sort-numeric">Available</th>
                  <th class="sort-numeric">OnHand</th>
                  <% if current_user.position != 'sales' %>
                    <th class="sort-numeric">Location</th>
                    <th class="sort-numeric">Age</th>
                  <% end %>
                </tr>
              </thead>
              <tbody>
                <% @stock.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.description %></td>
                  <td><%= cs.available %></td>
                  <td><%= cs.onhand %></td>
                  <% if current_user.position != 'sales' %>
                    <td><%= cs.customer %></td>
                    <td><%= time_ago_in_words(cs.age.days.ago) %></td>
                  <% end %>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>