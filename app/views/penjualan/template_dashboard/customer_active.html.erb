<div class="content-heading">
  Dashboard Active Customers <%= @branch %>
</div>

<div class="row">
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Active Customers REPORT <%= 1.month.ago.strftime('%B') %>
          </div>
          <div class="panel-body">
            <table id="datatable_city" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>New</th>
                  <th>Active</th>
                  <th>InActive</th>
                  <th>TOTAL</th>
                  <th>Growth</th>
                  <th>G_active</th>
                  <th>G_inactive</th>
                </tr>
              </thead>
              <tbody>
                <% @customer.each do |cus| %>
                <tr class="gradeX">
                  <td><%= cus.brand %></td>
                  <td><%= cus.new_customer %></td>
                  <td><%= cus.active_customer %></td>
                  <td><%= cus.inactive_customer %></td>
                  <td><%= cus.total %></td>
                  <td class="<%= coloring(cus.growth_customer) %>"><b><%= cpercent(cus.growth_customer.abs) %></b></td>
                  <td class="<%= coloring(cus.growth_active) %>"><b><%= cpercent(cus.growth_active.abs) %></b></td>
                  <td class="<%= coloring(cus.growth_inactive) %>"><b><%= cpercent(cus.growth_inactive.abs) %></b></td>
                </tr>
                <% end %>
              </tbody>
            </table>
            <tfoot>
              <ul>
                <li>Total =  Jumlah Customer dari Januari 2018</li>
                <li>Growth = New Customer / Total</li>
                <li>G_active = Jumlah Customer Aktif (<%= 1.month.ago.strftime('%B') %> - <%= 2.month.ago.strftime('%B') %> / Total)</li>
                <li>G_active = Jumlah Customer Tidak Aktif (<%= 1.month.ago.strftime('%B') %> - <%= 2.month.ago.strftime('%B') %> / Total)</li>
              </ul>
            </tfoot>
          </div>
        </div>
      </div>

      <% if params[:state].present? && params[:branch].present? %>
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            List <%= params[:state] == '1' ? 'Active' : 'InActive' %> <%= params[:brand] %> Customers REPORT
          </div>
          <div class="panel-body">
            <table id="datatable_customer" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Last Order</th>
                  <th><%= params[:state] == '1' ? 3.month.ago.strftime('%B %y') : 6.month.ago.strftime('%B %y') %></th>
                  <th><%= params[:state] == '1' ? 2.month.ago.strftime('%B %y') : 6.month.ago.strftime('%B %y') %></th>
                  <th><%= params[:state] == '1' ? 1.month.ago.strftime('%B %y') : 5.month.ago.strftime('%B %y') %></th>
                  <th><%= params[:state] == '1' ? Date.today.strftime('%B %y') : 4.month.ago.strftime('%B %y') %></th>
                </tr>
              </thead>
              <tbody>
                <% @list_customers.each do |cus| %>
                <tr class="gradeX">
                  <td><%= cus.customer %></td>
                  <td><%= cus.tanggalsj.strftime('%d %B %Y') %></td>
                  <td><%= currency(cus.three_month) %></td>
                  <td><%= currency(cus.two_month) %></td>
                  <td><%= currency(cus.last_month) %></td>
                  <td><%= currency(cus.this_month) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% end %>

    </div>
    <!-- END content-->
  </div>
</div>