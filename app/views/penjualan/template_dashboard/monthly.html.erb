                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <!-- START CONTENT-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales <%= @date.strftime("%B %Y") %> by Article
          </div>
          <div class="panel-body">
            <table id="most_item" class="table table-striped table-hover">
