<div class="content-heading">
  Dashboard <%= @brand_name %> WEEK(<%= 1.week.ago.to_date.cweek %>) REPORT for <%= @branch %> BRANCH
  <small>FROM <%= 1.week.ago.to_date.strftime("%d %B %Y") %> - <%= 1.week.ago.to_date.strftime("%d %B %Y") %></small>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START chart-->
    <div class="row">
      <div class="col-lg-12">
        <!-- START widget-->
        <div id="panelChart9" class="panel panel-default panel-demo">
          <div class="panel-heading">
            <div class="panel-title" style="text-align: center">
              <%= @brand_name %> Week <%= 4.week.ago.to_date.cweek %> - <%= 1.week.ago.to_date.cweek %> sales statistics
            </div>
          </div>
          <div class="panel-body">
            <div class="chart-spline-weekly flot-chart" style="width:100%;height:250px;"></div>
          </div>
        </div>
        <!-- END widget-->
      </div>
    </div>
    <!-- END chart-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales Week(<%= 1.week.ago.to_date.cweek %>) by Week
          </div>
          <div class="panel-body">
            <table id="datatable1" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Minggu ke</th>
                  <th>Tanggal</th>
                  <th class="sort-numeric">Jumlah</th>
                  <th class="sort-alpha">Total</th>
                </tr>
              </thead>
              <tbody>
                <% @all_week_brand.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.tanggalsj.cweek %></td>
                  <td><%= cs.tanggalsj.beginning_of_week.strftime("%d/%m/%Y") %> - <%= cs.tanggalsj.end_of_week.strftime("%d/%m/%Y") %></td>
                  <td><%= cs.jumlah %></td>
                  <td><%= currency(cs.price) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales Week(<%= 1.week.ago.to_date.cweek %>) by Product
          </div>
          <div class="panel-body">
            <table id="datatable_product" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Q_Wk(<%= 2.week.ago.to_date.cweek %>)</th>
                  <th>V_Wk(<%= 2.week.ago.to_date.cweek %>)</th>
                  <th>Q_Wk(<%= 1.week.ago.to_date.cweek %>)</th>
                  <th>V_Wk(<%= 1.week.ago.to_date.cweek %>)</th>
                </tr>
              </thead>
              <tbody>
                <% @product_summary.each do |cws| %>
                <tr class="gradeX">
                  <td><%= cws.kodejenis %></td>
                  <td><%= cws.qty_last_week %></td>
                  <td><%= currency(cws.val_last_week) %></td>
                  <td><%= cws.qty_this_week %></td>
                  <td><%= currency(cws.val_this_week) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
  <div class="col-lg-12">
    <!-- START CONTENT-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales Week(<%= 1.week.ago.to_date.cweek %>) by Customer
          </div>
          <div class="panel-body">
            <table id="datatable_customer" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Salesman</th>
                  <th class="sort-numeric">Jumlah</th>
                  <th class="sort-alpha">Total Harga</th>
                </tr>
              </thead>
              <tbody>
                <% @customer_summary.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.customer %></td>
                  <td><%= cs.salesman %></td>
                  <td><%= cs.ordered %></td>
                  <td><%= currency(cs.price) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales Week(<%= 1.week.ago.to_date.cweek %>) by City
          </div>
          <div class="panel-body">
            <table id="datatable_city" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>City</th>
                  <th>Q_Wk(<%= 2.week.ago.to_date.cweek %>)</th>
                  <th>V_Wk(<%= 2.week.ago.to_date.cweek %>)</th>
                  <th>Q_Wk(<%= 1.week.ago.to_date.cweek %>)</th>
                  <th>V_Wk(<%= 1.week.ago.to_date.cweek %>)</th>
                </tr>
              </thead>
              <tbody>
                <% @city_week_sum.each do |cws| %>
                <tr class="gradeX">
                  <td><%= cws.kota %></td>
                  <td><%= cws.qty_last_week %></td>
                  <td><%= currency(cws.val_last_week) %></td>
                  <td><%= cws.qty_this_week %></td>
                  <td><%= currency(cws.val_this_week) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <!-- START CONTENT-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> Mattress Top 10 sales From Week <%= 4.weeks.ago.to_date.cweek %> to <%= 1.weeks.ago.to_date.cweek %>
          </div>
          <div class="panel-body">
            <table id="most_item" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Article</th>
                  <th>Qty Week <%= 4.weeks.ago.to_date.cweek %></th>
                  <th>Val Week <%= 4.weeks.ago.to_date.cweek %></th>
                  <th>Qty Week <%= 3.weeks.ago.to_date.cweek %></th>
                  <th>Val Week <%= 3.weeks.ago.to_date.cweek %></th>
                  <th>Qty Week <%= 2.weeks.ago.to_date.cweek %></th>
                  <th>Val Week <%= 2.weeks.ago.to_date.cweek %></th>
                  <th>Qty Week <%= 1.weeks.ago.to_date.cweek %></th>
                  <th>Val Week <%= 1.weeks.ago.to_date.cweek %></th>
                </tr>
              </thead>
              <tbody>
                <% @most_item.each do |cws| %>
                <tr class="gradeX">
                  <td><%= cws.article %></td>
                  <td><%= cws.qty_4 %></td>
                  <td><%= currency(cws.val_4) %></td>
                  <td><%= cws.qty_3 %></td>
                  <td><%= currency(cws.val_3) %></td>
                  <td><%= cws.qty_2 %></td>
                  <td><%= currency(cws.val_2) %></td>
                  <td><%= cws.qty_1 %></td>
                  <td><%= currency(cws.val_1) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard sidebar-->
</div>