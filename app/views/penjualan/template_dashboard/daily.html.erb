<div class="content-heading">
  Dashboard <%= @brand_name %> <%= Date.today.strftime("%B %Y") %> REPORT for <%= @branch %> BRANCH
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START chart-->
    <div class="row">
      <div class="col-lg-12">
        <!-- START widget-->
        <div id="panelChart9" class="panel panel-default panel-demo">
          <div class="panel-heading">
            <div class="panel-title" style="text-align: center">
              <%= @brand_name %> sales Daily <%= Date.today.strftime("%B %Y") %> sales statistics
            </div>
          </div>
          <div class="panel-body">
            <div class="chart-spline-daily flot-chart"></div>
          </div>
        </div>
        <!-- END widget-->
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales Last Day by Product
          </div>
          <div class="panel-body">
            <table id="datatable_product" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Q_D(<%= 2.day.ago.to_date.day %>)</th>
                  <th>V_D(<%= 2.day.ago.to_date.day %>)</th>
                  <th>Q_D(<%= 1.day.ago.to_date.day %>)</th>
                  <th>V_D(<%= 1.day.ago.to_date.day %>)</th>
                </tr>
              </thead>
              <tbody>
                <% @daily_prod.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.kodejenis %></td>
                  <td><%= dp.qty_2 %></td>
                  <td><%= currency(dp.val_2) %></td>
                  <td><%= dp.qty_1 %></td>
                  <td><%= currency(dp.val_1) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales by Daily
          </div>
          <div class="panel-body">
            <table id="datatable1" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Tanggal</th>
                  <th class="sort-numeric">Jumlah</th>
                  <th class="sort-alpha">Total</th>
                </tr>
              </thead>
              <tbody>
                <% @daily_sum.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.tanggalsj.strftime("%d %B %Y") %></td>
                  <td><%= cs.jumlah %></td>
                  <td><%= currency(cs.price) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales Last Day by Salesman
          </div>
          <div class="panel-body">
            <table id="datatable_city" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Salesman</th>
                  <th>Q_D(<%= 2.day.ago.to_date.day %>)</th>
                  <th>V_D(<%= 2.day.ago.to_date.day %>)</th>
                  <th>Q_D(<%= 1.day.ago.to_date.day %>)</th>
                  <th>V_D(<%= 1.day.ago.to_date.day %>)</th>
                </tr>
              </thead>
              <tbody>
                <% @daily_salesman.each do |ds| %>
                <tr class="gradeX">
                  <td><%= ds.salesman %></td>
                  <td><%= ds.qty_2 %></td>
                  <td><%= currency(ds.val_2) %></td>
                  <td><%= ds.qty_1 %></td>
                  <td><%= currency(ds.val_1) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> sales Last Day by Customer
          </div>
          <div class="panel-body">
            <table id="datatable_customer" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Salesman</th>
                  <th>Q_D(<%= 2.day.ago.to_date.day %>)</th>
                  <th>V_D(<%= 2.day.ago.to_date.day %>)</th>
                  <th>Q_D(<%= 1.day.ago.to_date.day %>)</th>
                  <th>V_D(<%= 1.day.ago.to_date.day %>)</th>
                </tr>
              </thead>
              <tbody>
                <% @daily_customer.each do |ds| %>
                <tr class="gradeX">
                  <td><%= ds.customer %></td>
                  <td><%= ds.salesman %></td>
                  <td><%= ds.qty_2 %></td>
                  <td><%= currency(ds.val_2) %></td>
                  <td><%= ds.qty_1 %></td>
                  <td><%= currency(ds.val_1) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END chart-->
  </div>
