<div class="content-heading">
  <b>CUSTOMER DECREASE</b>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Total Revenue
          </div>
          <div class="panel-body">
            <table id="table-revenue-products" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Branch</th>
                  <th>Brand</th>
                  <th>Customer</th>
                  <th>Week <%= Date.today.cweek - 4 %></th>
                  <th>Week <%= Date.today.cweek - 3 %></th>
                  <th>Week <%= Date.today.cweek - 2 %></th>
                  <th>Week <%= Date.today.cweek - 1 %></th>
                </tr>
              </thead>
              <tbody>
                <% @customer.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.cabang.gsub('Cabang', '') %></td>
                  <td><%= dp.brand %></td>
                  <td><%= dp.customer_desc %></td>
                  <td><%= currency(dp.w4) %></td>
                  <td><%= currency(dp.w3) %></td>
                  <td><%= currency(dp.w2) %></td>
                  <td><%= currency(dp.w1) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
</div>