<div class="content-heading">
  <%= @brand_name %> Stock to Sales Ratio From WEEK(<%= 4.week.ago.to_date.cweek %>) to WEEK(<%= 1.week.ago.to_date.cweek %>) REPORT for <%= @branch %> BRANCH
  <small>FROM <%= 4.week.ago.to_date.strftime("%d %B %Y") %> - <%= 1.week.ago.to_date.strftime("%d %B %Y") %></small>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START chart-->
    <div class="row">
      <div class="col-lg-12">
        <!-- START widget-->
        <div id="panelChart9" class="panel panel-default panel-demo">
          <div class="panel-heading">
            <div class="panel-title" style="text-align: center">
              <%= @brand_name %> Week <%= 4.week.ago.to_date.cweek %> - <%= 1.week.ago.to_date.cweek %> sales statistics
            </div>
          </div>
          <div class="panel-body">
            <div class="chart-ssr flot-chart"></div>
          </div>
        </div>
        <!-- END widget-->
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
  <div class="col-lg-12">
    <!-- START CONTENT-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @brand_name %> Stock to Sales Ratio Week(<%= 1.week.ago.to_date.cweek %>)
          </div>
          <div class="panel-body">
            <table id="datatable1" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Sales qty</th>
                  <th>Stock qty</th>
                  <th>SSR</th>
                  <th>Sell-Through Rate</th>
                </tr>
              </thead>
              <tbody>
                <% @ssr_product.each do |ssr| %>
                <tr class="gradeX">
                  <td><%= ssr.product %></td>
                  <td><%= ssr.jumlah %></td>
                  <td><%= ssr.qty %></td>
                  <td><%= ssr.ssr %></td>
                  <td><%= ssr.str.nil? ? 0 : cpercent(ssr.str) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>