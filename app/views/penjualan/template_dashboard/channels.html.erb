<div class="content-heading">
  Dashboard NASIONAL ALL CHANNEL
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Search by Month Form
  </div>
  <div class="panel-body">
    <%= form_tag(request.fullpath, {method: :get, :class => "form-inline"}) do %>
    <div class="form-group">
      <%= select_month(params[:date].present? ? params[:date][:month].to_i : Date.today.month, {prompt: 'Choose month'}, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= select_year(Date.today, {start_year: 2017, end_year: Date.today.year, prompt: 'Choose year'}, {class: "form-control"}) %>
    </div>
    <%= submit_tag 'Search', name: nil, class: "btn btn-info" %>
    <% end %>
  </div>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Total Revenue <%= @date.to_date.strftime('%B %Y') %> By Channel
          </div>
          <div class="panel-body">
            <table id="table-revenue-branches-national" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>CHANNEL</th>
                  <th>ELITE</th>
                  <th></th>
                  <th>LADY</th>
                  <th></th>
                  <th>SERENITY</th>
                  <th></th>
                  <th>ROYAL</th>
                  <th></th>
                  <th>CLASSIC</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @allchannel.each do |ac| %>
                <tr class="gradeX">
                  <td><%= ac.channel %></td>
                  <td><%= currency(ac.val_elite) %></td>
                  <td class="<%= coloring(ac.elite) %>"><%= ac.elite.nil? ? 0 : cpercent(ac.elite.abs) %></td>
                  <td><%= currency(ac.val_lady) %></td>
                  <td class="<%= coloring(ac.lady) %>"><%= ac.lady.nil? ? 0 : cpercent(ac.lady.abs) %></td>
                  <td><%= currency(ac.val_serenity) %></td>
                  <td class="<%= coloring(ac.serenity) %>"><%= ac.serenity.nil? ? 0 : cpercent(ac.serenity.abs) %></td>
                  <td><%= currency(ac.val_royal) %></td>
                  <td class="<%= coloring(ac.royal) %>"><%= ac.royal.nil? ? 0 : cpercent(ac.royal.abs) %></td>
                  <td><%= currency(ac.val_classic) %></td>
                  <td class="<%= coloring(ac.classic) %>"><%= ac.classic.nil? ? 0 : cpercent(ac.classic.abs) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
</div>