<!-- START Sidebar (left)-->
<div class="aside-inner">
  <nav class="sidebar" data-sidebar-anyclick-close="">
    <!-- START sidebar nav-->
    <ul class="nav">
      <!-- START user info-->
      <li class="has-user-block">
        <div id="user-block" class="collapse">
          <div class="item user-block">
            <!-- User picture-->
            <!-- Name and Job-->
            <div class="user-block-info">
              <span class="user-block-name">Hello, <%= current_user.username %></span>
              <span class="user-block-role"><%= current_user.position.upcase %></span>
            </div>
          </div>
        </div>
      </li>
      <!-- END user info-->
      <li class="nav-heading"></li>
      <!-- SA Project except sales-->
        <% if managerial_users(current_user) %>
          <%= render "layouts/partials/managerial" %>
        <% elsif retail_users(current_user, current_user.branch1) %>
          <%= render "layouts/partials/retail_sidebar" %>
        <% elsif sales_users(current_user) %>
          <%= render "layouts/partials/retail_salesman_sidebar" %>
        <% elsif sales_counter_users(current_user) %>
          <%= render "layouts/partials/sales_counter" %>
        <% elsif direct_users(current_user) %>
          <%= render "layouts/partials/direct_sidebar" %>
        <% elsif modern_users(current_user) %>
          <%= render "layouts/partials/modern_sidebar" %>
        <% elsif entry_users(current_user) %>
          <%= render "layouts/partials/entry_sidebar" %>
        <% elsif administrator(current_user) %>
          <%= render "layouts/partials/administrator" %>
        <% end %>
      <!-- Iterates over all sidebar items-->
    </ul>
    <!-- END sidebar nav-->
  </nav>
</div>
<!-- END Sidebar (left)-->

<style type="text/css">
    .scrollable {
        height: 100%;
        overflow: auto;
    }
</style>