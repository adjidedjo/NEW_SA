<div class="content-heading">
  Dashboard DAILY <%= Date.today.strftime("%B %Y") %> REPORT for <%= @current_user.nama %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
           Sales Report From 2 days ago by Product
          </div>
          <div class="panel-body">
            <table id="datatable_product" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Q_<%= 1.day.ago.to_date.strftime('%d') %></th>
                  <th>V_<%= 1.day.ago.to_date.strftime('%d') %></th>
                  <th>Q_<%= 2.day.ago.to_date.strftime('%d') %></th>
                  <th>V_<%= 2.day.ago.to_date.strftime('%d') %></th>
                  <th>Target</th>
                </tr>
              </thead>
              <tbody>
                <% @sales_daily_product.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.kodejenis %></td>
                  <td><%= dp.qty_1 %></td>
                  <td><%= currency(dp.val_1) %></td>
                  <td><%= dp.qty_2 %></td>
                  <td><%= currency(dp.val_2) %></td>
                  <td class="<%= coloring(dp.target) %>"><%= dp.target.nil? ? 0 : cpercent(dp.target) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
           Sales Report This Week(<%= Date.yesterday.beginning_of_week.day %>-<%= Date.yesterday.end_of_week.strftime('%d %B %y') %>) by Product
          </div>
          <div class="panel-body">
            <table id="datatable1" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Q_W(<%= 1.day.ago.to_date.cweek %>)</th>
                  <th>V_W(<%= 1.day.ago.to_date.cweek %>)</th>
                  <th>Q_W(<%= 1.day.ago.to_date.last_week.cweek %>)</th>
                  <th>V_W(<%= 1.day.ago.to_date.last_week.cweek %>)</th>
                  <th>WoW</th>
                </tr>
              </thead>
              <tbody>
                <% @this_week_product.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.kodejenis %></td>
                  <td><%= dp.qty_1 %></td>
                  <td><%= currency(dp.val_1) %></td>
                  <td><%= dp.qty_2 %></td>
                  <td><%= currency(dp.val_2) %></td>
                  <td class="<%= coloring(dp.percentage) %>"><%= dp.percentage.nil? ? 0 : cpercent(dp.percentage) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
           Sales Report This Month by Product
          </div>
          <div class="panel-body">
            <table id="table_without_filter1" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th><%= Date.yesterday.strftime('%b %y') %></th>
                  <th><%= Date.yesterday.strftime('%b %y') %></th>
                  <th>MoM</th>
                  <th>Target</th>
                  <th>RoT</th>
                </tr>
              </thead>
              <tbody>
                <% @this_month_product.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.kodejenis %></td>
                  <td><%= dp.qty_1 %></td>
                  <td><%= currency(dp.val_1) %></td>
                  <td class="<%= coloring(dp.percentage) %>"><%= dp.percentage.nil? ? 0 : cpercent(dp.percentage) %></td>
                  <td class="<%= coloring_target(dp.target) %>"><%= dp.target.nil? ? 0 : cpercent(dp.target) %></td>
                  <td><%= dp.rot.nil? ? 0 : (dp.rot < 0 ? 0 : dp.rot) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
