                <tr>
                  <th>City</th>
                  <th>KM</th>
                  <th>DV</th>
                  <th>HB</th>
                  <th>SA</th>
                  <th>SB</th>
                  <th>KB</th>
                  <th>Total</th>
                  <th>MoM</th>
                </tr>
              </thead>
              <tbody>
                <% @this_month_city.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.kota %></td>
                  <td><%= dp.km %></td>
                  <td><%= dp.dv %></td>
                  <td><%= dp.hb %></td>
                  <td><%= dp.sa %></td>
                  <td><%= dp.sb %></td>
                  <td><%= dp.kb %></td>
                  <td><%= currency(dp.total_1) %></td>
                  <td class="<%= coloring(dp.percentage) %>"><%= dp.percentage.nil? ? 0 : cpercent(dp.percentage) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
  <div class="col-lg-12">
    <!-- START content-->
