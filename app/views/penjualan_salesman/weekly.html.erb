<div class="content-heading">
  Dashboard WEEKLY <%= Date.today.strftime("%B %Y") %> REPORT for <%= @current_user.nama %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
           Sales Report Last Week(<%= 1.week.ago.beginning_of_week.day %>-<%= 1.week.ago.end_of_week.strftime('%d %B %y') %>) by Product
          </div>
          <div class="panel-body">
            <table id="datatable1" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Q_W(<%= 1.week.ago.to_date.cweek %>)</th>
                  <th>V_W(<%= 1.week.ago.to_date.cweek %>)</th>
                  <th>Q_W(<%= 2.weeks.ago.to_date.cweek %>)</th>
                  <th>V_W(<%= 2.weeks.ago.to_date.cweek %>)</th>
                  <th>WoW</th>
                  <th>TAchiev</th>
                </tr>
              </thead>
              <tbody>
                <% @last_week_product.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.kodejenis %></td>
                  <td><%= dp.qty_1 %></td>
                  <td><%= currency(dp.val_1) %></td>
                  <td><%= dp.qty_2 %></td>
                  <td><%= currency(dp.val_2) %></td>
                  <td class="<%= coloring(dp.percentage) %>"><%= dp.percentage.nil? ? 0 : cpercent(dp.percentage) %></td>
                  <td>SOON</td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
           Sales Report Last Week by City
          </div>
          <div class="panel-body">
            <table id="datatable_city" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>City</th>
                  <th>KM</th>
                  <th>DV</th>
                  <th>HB</th>
                  <th>SA</th>
                  <th>SB</th>
                  <th>Total</th>
                  <th>WoW</th>
                </tr>
              </thead>
              <tbody>
                <% @last_week_city.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.kota %></td>
                  <td><%= dp.km %></td>
                  <td><%= dp.dv %></td>
                  <td><%= dp.hb %></td>
                  <td><%= dp.sa %></td>
                  <td><%= dp.sb %></td>
                  <td><%= currency(dp.total_1) %></td>
                  <td class="<%= coloring(dp.percentage) %>"><%= dp.percentage.nil? ? 0 : cpercent(dp.percentage) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
           Sales Report Last Week by Customer
          </div>
          <div class="panel-body">
            <table id="datatable_customer" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>KM</th>
                  <th>DV</th>
                  <th>HB</th>
                  <th>SA</th>
                  <th>SB</th>
                  <th>Total</th>
                  <th>WoW</th>
                </tr>
              </thead>
              <tbody>
                <% @last_week_customer.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.customer %></td>
                  <td><%= dp.km %></td>
                  <td><%= dp.dv %></td>
                  <td><%= dp.hb %></td>
                  <td><%= dp.sa %></td>
                  <td><%= dp.sb %></td>
                  <td><%= currency(dp.total_1) %></td>
                  <td class="<%= coloring(dp.percentage) %>"><%= dp.percentage.nil? ? 0 : cpercent(dp.percentage) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading">
           Sales Report Last Week by Article
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Article</th>
                  <th>Size</th>
                  <th>Q_<%= 1.week.ago.beginning_of_week.day %>-<%= 1.week.ago.end_of_week.day %></th>
                  <th>V_<%= 1.week.ago.beginning_of_week.day %>-<%= 1.week.ago.end_of_week.day %></th>
                  <th>Q_<%= 2.weeks.ago.beginning_of_week.day %>-<%= 2.weeks.ago.end_of_week.day %></th>
                  <th>V_<%= 2.weeks.ago.beginning_of_week.day %>-<%= 2.weeks.ago.end_of_week.day %></th>
                  <th>WoW</th>
                </tr>
              </thead>
              <tbody>
                <% @last_week_article.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.namaartikel %></td>
                  <td><%= dp.lebar %></td>
                  <th><%= dp.qty_1 %></th>
                  <th><%= currency(dp.val_1) %></th>
                  <th><%= dp.qty_2 %></th>
                  <th><%= currency(dp.val_2) %></th>
                  <td class="<%= coloring(dp.percentage) %>"><%= dp.percentage.nil? ? 0 : cpercent(dp.percentage) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
</div>