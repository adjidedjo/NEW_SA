<div class="content-heading">
  BASE PRICE for <%= @branch %>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            BASE PRICE *Not Including Discounts
          </div>
          <div class="panel-body">
            <table id="bp-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Descriptions</th>
                  <th>Brand</th>
                  <th>Price</th>
                </tr>
              </thead>
              <tbody>
                <% @bp.each do |cs| %>
                <tr class="gradeX">
                  <td><%= cs.description %></td>
                  <td><%= cs.brand %></td>
                  <td><%= currency(cs.base_price) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- END dashboard main content-->
</div>