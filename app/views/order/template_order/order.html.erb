<div class="content-heading">
  Order REPORT <%= @brand_name %> Up To <%= Date.today.strftime("%d %B %Y") %> for <%= @branch %> BRANCH
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Outstanding Order <%= @brand %> 
          </div>
          <div class="panel-body">
            <table id="datatable_customer" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Order No</th>
                  <th>Customer</th>
                  <th>Promised Delivery</th>
                  <th>Exceeds</th>
                </tr>
              </thead>
              <tbody>
                <% @out_daily.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.sddoco.to_i %></td>
                  <td><%= dp.abalph %></td>
                  <td><%= julian_to_date(dp.sdopdj).strftime("%d-%b-%y") %></td>
                  <td><%= (Date.today - julian_to_date(dp.sdopdj)).to_i %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            <%= @brand %> Order Ready to Ship
          </div>
          <div class="panel-body">
            <table id="datatable_city" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Order No</th>
                  <th>Customer</th>
                  <th>Sales</th>
                  <th>Promised Delivery</th>
                  <th>Qty</th>
                </tr>
              </thead>
              <tbody>
                <% @pick_daily.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.sddoco.to_i %></td>
                  <td><%= dp.abalph %></td>
                  <td><%= dp.salesman %></td>
                  <td><%= julian_to_date(dp.sdopdj).strftime("%d-%b-%y") %></td>
                  <td><%= dp.jumlah.to_i/10000 %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Held Orders by Credit for brand <%= @brand %> 
          </div>
          <div class="panel-body">
            <table id="held_orders" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Order No</th>
                  <th>Ship To</th>
                  <th>Salesman</th>
                  <th>Order Date</th>
                </tr>
              </thead>
              <tbody>
                <% @held_order_credit.each do |hd| %>
                <tr class="gradeX">
                  <td><%= hd.hodoco.to_i %></td>
                  <td><%= hd.shipto %></td>
                  <td><%= hd.salesman %></td>
                  <td><%= julian_to_date(hd.order_date).strftime("%d-%b-%y") %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Held Orders by Approval for brand <%= @brand %> 
          </div>
          <div class="panel-body">
            <table id="stock-table" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Order No</th>
                  <th>Ship To</th>
                  <th>Salesman</th>
                  <th>Order Date</th>
                </tr>
              </thead>
              <tbody>
                <% @held_order_approve.each do |hd| %>
                <tr class="gradeX">
                  <td><%= hd.hodoco.to_i %></td>
                  <td><%= hd.shipto %></td>
                  <td><%= hd.salesman %></td>
                  <td><%= julian_to_date(hd.order_date).strftime("%d-%b-%y") %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>