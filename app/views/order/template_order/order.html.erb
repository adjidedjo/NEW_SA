<div class="content-heading">
  Order REPORT <%= @brand_name %> Up To <%= Date.today.strftime("%d %B %Y") %> for <%= @branch %> BRANCH
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-5">
        <div class="panel panel-info">
          <div class="panel-body">
            <%= form_tag(request.fullpath, {method: :get, :class => "form-inline"}) do %>
              Generate PBJ <%= button_tag 'Export', value: 'xlsx', name: 'format', class: "btn btn-info" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            Outstanding Order <%= @brand %> REAL TIME
          </div>
          <div class="panel-body">
            <table id="datatable_outstanding_order" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>BP</th>
                  <th>Order No</th>
                  <th>Status</th>
                  <th>Description</th>
                  <th>Qty</th>
                  <th>Sales</th>
                  <th>Customer</th>
                  <th>Requested Date</th>
                  <th>Exceeds</th>
                </tr>
              </thead>
              <tbody>
                <% @out_daily.each do |dp| %>
                <tr class="gradeX">
                  <td><%= dp.sdmcu %></td>
                  <td><%= dp.order_no %></td>
                  <td><%= dp.status %></td>
                  <td><%= dp.sddsc1.strip + ' ' + dp.sddsc2.strip %></td>
                  <td><%= dp.jumlah/10000 %></td>
                  <td><%= dp.namasales %></td>
                  <td><%= dp.abalph %></td>
                  <td><%= julian_to_date(dp.promised_delivery).strftime("%d-%b-%y") %></td>
                  <td><%= (Date.today - julian_to_date(dp.promised_delivery).to_date).to_i %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="panel-footer">
            KETERANGAN STATUS: <br />
            525: Outstanding Order <br />
            540: Sudah di commit <br />
            560: Siap dikirim <br />
            565: Siap dikirim dan Siap Print Surat Jalan <br />
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-6">
          <div class="panel panel-info">
            <div class="panel-heading" style="text-align: center">
              Held Orders by C1 for brand <%= @brand %>
            </div>
            <div class="panel-body">
              <table id="held_orders" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Order No</th>
                    <th>Ship To</th>
                    <th>Salesman</th>
                    <th>Order Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% @held_order_credit.each do |hd| %>
                  <tr class="gradeX">
                    <td><%= hd.order_no %></td>
                    <td><%= hd.customer %></td>
                    <td><%= hd.salesman %></td>
                    <td><%= hd.promised_delivery.strftime("%d-%b-%y") %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="panel panel-info">
            <div class="panel-heading" style="text-align: center">
              Held Orders by C2 for brand <%= @brand %>
            </div>
            <div class="panel-body">
              <table id="stock-table" class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Order No</th>
                    <th>Ship To</th>
                    <th>Salesman</th>
                    <th>Order Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% @held_order_approve.each do |hd| %>
                  <tr class="gradeX">
                    <td><%= hd.order_no %></td>
                    <td><%= hd.customer %></td>
                    <td><%= hd.salesman %></td>
                    <td><%= hd.promised_delivery.strftime("%d-%b-%y") %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
