<%= form_for(marketshare) do |f| %>
<% if marketshare.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(marketshare.errors.count, "error") %> prohibited this marketshare from being saved:</h2>

  <ul>
    <% marketshare.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="col-lg-12">
  <div class="col-lg-4">
    <fieldset>
      <div class="form-group">
        <label class="col-sm-3 control-label">Customer</label>
        <div class="col-sm-8">
          <%= f.text_field :customer_name, data: { autocomplete_source: @customer.order(:name).map(&:name)} %>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="col-lg-4">
    <fieldset>
      <div class="form-group">
        <label class="col-sm-3 control-label">Internal Brand</label>
        <div class="col-sm-8">
          <%= f.select :brand, @int_brand.collect {|p| [p.name, p.name]}, {}, {class: "form-control m-b"} %>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="col-lg-4">
    <fieldset>
      <div class="form-group">
        <label class="col-sm-3 control-label">Wilayah</label>
        <div class="col-sm-8">
          <%= f.text_field :city, data: { city_source: @cities} %>
        </div>
      </div>
    </fieldset>
  </div>
</div>

<div class="col-lg-12">
  <div class="col-lg-4 col-lg-offset-1">
    <fieldset>
      <div class="form-group">
        <label class="col-lg-5 control-label">Tanggal Awal</label>
        <div class="col-lg-7">
          <div id="datetimepicker3" class="input-group date">
            <%= f.text_field "start_date", class: 'form-control' %>
            <span class="input-group-addon"> <span class="fa fa-calendar"></span> </span>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
  <div class="col-lg-4">
    <fieldset>
      <div class="form-group">
        <label class="col-sm-5 control-label">Tanggal Akhir</label>
        <div class="col-sm-7">
          <div id="datems2" class="input-group date">
            <%= f.text_field "end_date", value: f.object.present? ? f.object.end_date : Date.today, class: 'form-control' %>
            <span class="input-group-addon"> <span class="fa fa-calendar"></span> </span>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
</div>

<div class="col-lg-12">
  <div class="col-lg-4 col-lg-offset-3">
    <table class='table'>
      <thead>
        <tr>
          <th>Brand</th>
          <th>Amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody class='fields'>
        <%= f.fields_for :marketshare_brands do |builder| %>
        <%= render 'marketshare_brand', f: builder %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-lg-4 col-lg-offset-7">
    <%= link_to_add_row('Add', f, :marketshare_brands, class: 'btn btn-primary') %>
  </div>
</div>

<div class="form-actions">
  <%= f.button "Submit", class: 'btn btn-primary' %>

</div>

<% end %>
