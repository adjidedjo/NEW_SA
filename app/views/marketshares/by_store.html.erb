<div class="content-heading">
  Dashboard MARKETSHARE
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Search by Month Form
  </div>
  <div class="panel-body">
    <%= form_tag(request.fullpath, {method: :get, :class => "form-inline"}) do %>
    <div class="form-group">
      Branch:
    </div>
    <div class="form-group">
      <%= select_tag "areas", options_from_collection_for_select(@areas, "id", "area", params[:areas]), {class: "form-control"} %>
    </div>
    <div class="form-group">
      Brand:
    </div>
    <div class="form-group">
      <%= select_tag "brand", options_from_collection_for_select(@brand, "name", "name", params[:brand]), {class: "form-control"} %>
    </div>
    <%= submit_tag 'Search', name: nil, class: "btn btn-info" %>
    <% end %>
  </div>
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<% if params[:areas].present? %>
<div class="row">
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading" style="text-align: center">
            MARKETSHARE BY STORE
          </div>
          <div class="panel-body">
            <table id="table-revenue-products" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th style="text-align: center;">STORE</th>
                  <th style="text-align: center;">CITY</th>
                  <th style="text-align: center;">PERIOD</th>
                  <th style="text-align: center;">BRAND</th>
                  <th style="text-align: center;">COMPETITOR</th>
                  <th style="text-align: center;">AMOUNT</th>
                </tr>
              </thead>
              <tfoot></tfoot>
              <tbody>
                <% @ms_by_store.each do |ms| %>
                <tr class="gradeX">
                  <td style="text-align: center;"><%= ms.customer_name %></td>
                  <td style="text-align: center;"><%= ms.city %></td>
                  <td style="text-align: center;"><%= ms.start_date %> - <%= ms.end_date %></td>
                  <td style="text-align: center;"><%= ms.internal_brand %></td>
                  <td style="text-align: center;"><%= ms.name %></td>
                  <td style="text-align: center;"><%= currency(ms.amount) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="panel-footer"></div>
        </div>
      </div>
    </div>
    <!-- END content-->
  </div>
</div>
<% end %>
