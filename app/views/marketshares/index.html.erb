<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading">
          Marketshare Customer
        </div>
        <div class="panel-body">
          <table id="productivities" class="table table-striped table-hover">
            <thead>
              <tr>
                <th style="width: auto;">NAME</th>
                <th style="width: auto;">BRAND</th>
                <th style="width: auto;">CITY</th>
                <th style="width: auto;">PERIOD</th>
                <th></th>
              </tr>
            </thead>
            <tfoot></tfoot>
            <tbody>
              <% @marketshares.each do |marketshare| %>
              <tr>
                <td><%= find_customer(marketshare.customer_id).name %></td>
                <td><%= marketshare.brand %></td>
                <td><%= marketshare.city %></td>
                <td><%= marketshare.start_date.to_date.strftime("%B") %> - <%= marketshare.end_date.to_date.strftime("%B") %></td>
                <td><%= link_to 'Edit', edit_marketshare_path(marketshare), class: "mb-sm btn-xs btn btn-primary btn-outline" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="panel-footer">
          if you want to create a new one? click <%= link_to 'New', new_marketshare_path, class: "mb-sm btn-xs btn btn-primary btn-outline" %>
        </div>
      </div>
    </div>
  </div>
</div>