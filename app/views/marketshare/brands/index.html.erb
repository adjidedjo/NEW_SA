<!-- START content-->

<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12" style="margin-bottom: 10px;">
    <div class="row">
      <div class="col-lg-12">
        <%= link_to 'New Brand', new_marketshare_brand_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-warning">
          <div class="panel-heading" style="text-align: center">
            Brands
          </div>
          <div class="panel-body">
            <table id="index-marketshare-brands" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Brand</th>
                  <th>Type</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @marketshare_brands.each do |mb| %>
                <tr>
                  <td><%= mb.name %></td>
                  <td><%= mb.brand_type.name %></td>
                  <td><%= brand_status(mb.external) %></td>
                  <td><%= link_to 'Delete', marketshare_brand_path(mb), method: :delete, 
                  data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
