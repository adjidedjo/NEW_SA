<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <div class="row">
      <div class="panel panel-info">
        <div class="panel-heading">
          National Salesman
        </div>
        <div class="panel-body">
          <table id="productivities" class="table table-striped table-hover">
            <thead>
              <tr>
                <th style="width: auto;">NIK</th>
                <th style="width: auto;">Nama</th>
                <th style="width: auto;">Cabang</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tfoot></tfoot>
            <tbody>
              <% @salesmen.each do |sm| %>
              <tr>
                <td><%= sm.nik %></td>
                <td><%= sm.nama %></td>
                <td><%= find_area(sm.branch_id) %></td>
                <td><%= link_to "EDIT", edit_salesman_path(sm) %></td>
                <td><%= link_to "HAPUS", salesman_path(sm), method: :delete, data: { confirm: "Yakin?"} %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="panel-footer">if you want to create a new one? click <%= link_to "here", new_salesman_path, class: "mb-sm btn-xs btn btn-primary btn-outline" %></div>
      </div>
    </div>
  </div>
</div>
