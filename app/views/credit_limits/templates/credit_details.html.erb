<div class="content-heading">
  <%= @name.name %> CREDIT LIMITS DETAILS
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="panel panel-info">
          <div class="panel-heading">
            <%= @name.name %> Credit Limit on <b><%= Date.today.strftime('%d %B %Y')%></b>
          </div>
          <div class="panel-body">
            <table id="credit_checks" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>Description</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody>
                <% @credit_details.each do |cd| %>
                <tr class="gradeX">
                  <td><%= cd.cus %></td>
                  <td><%= cd.name %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="panel-footer">
            *Data Sales per CO atau Company<br />
            *Klik Back pada Browser untuk kembali ke menu sebelumnya
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
