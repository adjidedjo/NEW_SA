<div class="content-heading">
  CUSTOMER CREDIT LIMITS REPORT <%= @branch_name %> BRANCH
</div>
<!-- START widgets box-->
<!-- END widgets box-->
<div class="row">
  <!-- START dashboard main content-->
  <div class="col-lg-12">
    <!-- START content-->
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info">
          <div class="panel-heading">
            Customer Credit Limit <b><%= Date.today.strftime('%d %B %Y')%></b>
          </div>
          <div class="panel-body">
            <table id="credit_limits" class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>CO</th>
                  <th>Address Number</th>
                  <th>Customer</th>
                  <th>City</th>
                  <th>Credit Limit</th>
                  <th>Open Order</th>
                  <th>Amount Due</th>
                  <th>Balance</th>
                </tr>
              </thead>
              <tbody>
                <% @credit_checks.each do |cc| %>
                <tr class="gradeX">
                  <td><%= cc.co %></td>
                  <td><%= link_to cc.address_number, credit_limits_bandung_credit_checks_credit_details_path(customer_id: cc.address_number, co: cc.co) %></td>
                  <td><%= cc.name %></td>
                  <td><%= cc.city %></td>
                  <td><%= currency(cc.credit_limit.to_i) %></td>
                  <td><%= currency(cc.open_amount.to_i) %></td>
                  <td><%= currency(cc.amount_due.to_i) %></td>
                  <td><%= currency(cc.credit_limit.to_i - (cc.amount_due.to_i + cc.open_amount.to_i)) %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
